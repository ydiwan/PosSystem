<Window x:Class="Pos.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Products list -->
        <GroupBox Header="Products" Grid.Column="0" Margin="5">
            <ListBox x:Name="ProductsList"
                     DisplayMemberPath="Name"
                     MouseDoubleClick="ProductsList_MouseDoubleClick"/>
        </GroupBox>

        <!-- Cart + totals -->
        <GroupBox Header="Cart" Grid.Column="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="CartGrid"
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Item" Binding="{Binding Product.Name}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding LineTotal}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,10">
                    <TextBlock x:Name="SubtotalText" FontSize="16"/>
                    <TextBlock x:Name="TaxText" FontSize="16"/>
                    <TextBlock x:Name="TotalText" FontSize="18" FontWeight="Bold"/>
                </StackPanel>

                <Button Grid.Row="2"
                        Content="Complete Sale"
                        Height="40"
                        Margin="0,5,0,0"
                        Click="CompleteSale_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>

